{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "acts", "board"],
  "properties": {
    "id": { "type": "string" },
    "display_name_key": { "type": "string" },
    "description_key": { "type": "string" },
    "board": {
      "type": "object",
      "properties": {
        "paths": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "tiles"],
            "properties": {
              "id": { "type": "string" },
              "tiles": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["x", "y"],
                  "properties": {
                    "x": { "type": "integer" },
                    "y": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "acts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["act_number", "levels", "boss"],
        "properties": {
          "act_number": { "type": "integer", "minimum": 1 },
          "levels": {
            "type": "array",
            "items": { "type": "string" }
          },
          "boss": { "type": "string" }
        }
      }
    }
  }
}
